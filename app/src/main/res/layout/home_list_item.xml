<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl_click"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_80dp"
    android:padding="@dimen/padding_6dp">

    <com.example.loginpluschat.civ.CircleImageView
        android:id="@+id/iv_card"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:layout_centerVertical="true"
        android:scaleType="centerInside"
        android:layout_marginStart="@dimen/padding_6dp"
        app:civ_border_color="@color/black"
        app:civ_border_width="@dimen/padding_2dp" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_toEndOf="@+id/iv_card"
        android:layout_marginBottom="@dimen/margin_5dp"
        android:textSize="@dimen/textsize_15sp"
        tools:text="android text" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height"
        android:layout_alignParentBottom="true"
        android:background="@color/sky_blue_e0e9ff" />
</RelativeLayout>