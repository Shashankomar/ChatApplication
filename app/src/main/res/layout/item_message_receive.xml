<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="@dimen/padding_6dp"
    android:paddingBottom="@dimen/padding_6dp">

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginStart="@dimen/dp_8"
        android:background="@drawable/circle"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_receive_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:includeFontPadding="false"
        tools:text="John Doe"
        android:textSize="@dimen/textsize_12sp"
        android:visibility="gone"
        app:layout_constraintLeft_toRightOf="@+id/iv_circle"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_receive_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/height_80dp"
        android:background="@drawable/rounded_rectangle_green"
        android:maxWidth="@dimen/chat_box_width"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/dp_8"
        android:paddingBottom="@dimen/dp_30"
        tools:text="hi man, how arefsdlfjslsjflsj you?"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_receive_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        tools:text="11:40"
        android:layout_marginBottom="@dimen/dp_8"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/textsize_14sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_receive_body"
        app:layout_constraintEnd_toEndOf="@+id/tv_receive_body" />

</androidx.constraintlayout.widget.ConstraintLayout>