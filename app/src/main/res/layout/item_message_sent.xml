<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/padding_6dp"
    android:paddingBottom="@dimen/padding_6dp">

    <TextView
        android:id="@+id/tv_sent_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/height_80dp"
        android:background="@drawable/rounded_rectangle_blue"
        android:paddingStart="@dimen/dp_8"
        android:paddingTop="@dimen/dp_8"
        android:paddingEnd="@dimen/padding_12dp"
        android:paddingBottom="@dimen/dp_30"
        tools:text="testing"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/tv_sent_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        tools:text="slfjsdlfk"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="@+id/tv_sent_body"
        app:layout_constraintEnd_toStartOf="@+id/iv_check"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="@dimen/dp_17"
        android:layout_height="@dimen/dp_17"
        android:layout_marginEnd="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_8"
        android:src="@drawable/ic_baseline_done_24"
        app:layout_constraintBottom_toBottomOf="@id/tv_sent_body"
        app:layout_constraintEnd_toEndOf="@+id/tv_sent_body" />
</androidx.constraintlayout.widget.ConstraintLayout>